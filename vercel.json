{
  "version": 2,
  "builds": [
    {
      "src": "api/**", // Adjust the path to match your assets directory
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.php",
      "use": "vercel-php@0.6.0"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ]
}

